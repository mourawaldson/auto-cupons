{
  "manifest_version": 3,
  "name": "Auto Cupons",
  "version": "1.3.0",
  "description": "Aplica automaticamente todos os cupons com botão de iniciar manual e tem continuidade automática entre páginas.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.mercadolivre.com.br/cupons/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
